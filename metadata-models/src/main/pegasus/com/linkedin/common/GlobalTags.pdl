namespace com.linkedin.common

/**
 * Tag aspect used for applying tags to an entity
 */
@Aspect = {
  "name": "globalTags"
}
record GlobalTags {

  /**
   * Tags associated with a given entity
   */
  @Searchable = {
      "/*/tag": {
        "fieldName": "tags_override",
        "indexSettings": [{"indexType": "PARTIAL_LONG"}]
      }
  }
  tags: array[TagAssociation]
}
